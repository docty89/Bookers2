<p id="notice"><%= notice %></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= render 'users/info', user: @book.user %>
    <%= render 'books/form', book: @newbook %>
    </div>  
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr id="book_<%= @book.id %>">
              <td><%= link_to @book.user do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "noimage.png", size: "60x60" %><br>
                  <%= @book.user.name %>
                  <% end %>
              </td>
              <td><%= link_to book_path do %>
                  <%= @book.title %>
                  <% end %>
              </td>
              <td><%= @book.body %></td>
              <td class="favorite-btn"><%= render "favorites/favorite-btn", book: @book %></td>
              <td>コメント数 : <%= @book.book_comments.count %></td>
              <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
      <table>
        <tbody>
          <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td><%= link_to @book.user do %>
                <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, fallback: "noimage.png", size: "60x60" %><br>
                <%= book_comment.user.name %>
                <% end %>
            </td>
            <td><%= book_comment.comment %>
            </td>
            <% if book_comment.user == current_user %>
            <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment %>
          <%= f.submit "送信" %>
        <% end %>  
      </div>

    </div>
  </div>
</div>

