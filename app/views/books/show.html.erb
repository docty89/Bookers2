<p id="notice"><%= notice %></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <p><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "noimage.png", size: "60x60" %></p>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@book.user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @newbook, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, :class => "form-control" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>  
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td><%= link_to @book.user do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "noimage.png", size: "60x60" %><br>
                  <%= @book.user.name %>
                  <% end %>
              </td>
              <td><%= link_to book_path do %>
                  <%= @book.title %>
                  <% end %>
              </td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
              <% end %>
            </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>

