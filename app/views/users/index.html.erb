<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <p><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "noimage.png", size: "60x60" %></p>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
          <tr>
            <th>follows</th>
            <th><%= link_to current_user.followings.count, follows_user_path(current_user) %></th>
          </tr>
          <tr>
            <th>followers</th>
            <th><%= link_to current_user.followers.count, followers_user_path(current_user) %></th>
          </tr>
        </tbody>  
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
    
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, :class => "form-control" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>  
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "noimage.png", size: "60x60" %></td>
              <td><%= user.name %></td>
              <td>フォロー数: <%= user.followings.count %></td>
              <td>フォロワー数: <%= user.followers.count %></td>
              <td>
                <% if current_user != user %>
                  <% if user.followed_by?(current_user) %>
                    <%= link_to "フォロー外す", user_relationships_path(user), method: :delete %>
                  <% else %>
                    <%= link_to "フォローする", user_relationships_path(user), method: :post %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to "Show", user %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

