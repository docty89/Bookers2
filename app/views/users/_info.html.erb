      <h2>User info</h2>
      <p><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "noimage.png", size: "60x60" %></p>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>  
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
          <tr>
            <th>follows</th>
            <th><%= link_to user.followings.count, follows_user_path(user) %></th>
          </tr>
          <tr>
            <th>followers</th>
            <th><%= link_to user.followers.count, followers_user_path(user) %></th>
          </tr>
          <% if current_user != user %>
          <tr>
            <% if user.followed_by?(current_user) %>
            <th><%= link_to "フォロー外す", user_relationships_path(user), method: :delete %></th>
            <% else %>
            <th><%= link_to "フォローする", user_relationships_path(user), method: :post %></th>
            <% end %>
          </tr>
          <tr>
            <th><%= link_to "チャットする", chat_path(user.id) %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
        <% end %>
      </div>